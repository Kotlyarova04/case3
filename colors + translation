from deep_translator import GoogleTranslator


def get_color_choice():
    colors = ["красный", "синий", "зеленый", "желтый", "оранжевый", "пурпурный", "розовый"]
    while True:
        color_1 = input("Пожалуйста, введите первый цвет (красный, синий, зеленый, желтый, оранжевый, пурпурный, розовый): ")
        if color_1 in colors:
            break
        print("Пожалуйста, повторите попытку")
    while True:
        color_2 = input("Пожалуйста, введите второй цвет (красный, синий, зеленый, желтый, оранжевый, пурпурный, розовый): ")
        if color_2 in colors and color_2 != color_1:
            break
        print("Пожалуйста, повторите попытку. Возможно, введенный цвет уже был использован")
    return color_1, color_2


def translate(col):
    translated = GoogleTranslator(source='auto', target='en').translate(col)
    return translated


color_1, color_2 = get_color_choice()
color_1, color_2 = translate(color_1), translate(color_2)
print(color_1, color_2)
